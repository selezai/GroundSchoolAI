{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@env": ["./src/types/env.d.ts"]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/types/*.d.ts"
  ]
}
